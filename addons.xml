<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.discavehb" name="DiscaveHB Repositorio" version="0.0.1" provider-name="Discave">
	<extension point="xbmc.addon.repository" name="Discave Repositorio">
		<dir>
		<info compressed="false">http://raw.githubusercontent.com/discave/discave.repo/master/addons.xml</info>
		<checksum>http://raw.githubusercontent.com/discave/discave.repo/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.githubusercontent.com/discave/discave.repo/master/repo/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>DiscaveHB Repo</summary>
		<description>DiscaveHB Repositorio</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.tugak"
       name="Tuga Kids"
       version="1.2"
       provider-name="Discave">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.t0mm0.common" version="2.0.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" version="3.0.0"/>
    <import addon="script.module.urlresolver" optional="true"/>
    <import addon="script.module.simplejson" />
    <import addon="script.common.plugin.cache" version="2.5.2"/>
    <import addon="script.module.metahandler" version="2.5.1"/>
    <import addon="script.module.livestreamer" optional="true"/>

  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Video em audio Pt</summary>
	<description lang="en">Alguns dos melhores filmes de animação com o audio em Pt-pt
	Necessita do URLResolver, HTTPLib2, Simplejson
	Qualquer contacto https://www.facebook.com/groups/discavehbrepo/</description></description>
	<disclaimer lang="en">Todos os conteúdos não são hospedados pelos intervinientes, são link's encontrados na net em qualquer motor de busca</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
</addons>
